{
  "sura_name": "سُورَةُ العَادِيَاتِ",
  "sura_english_name": "Alaadiyaat",
  "total_ayat": 11,
  "ayats": [
    {
      "number": 1,
      "arabic": "بِسْمِ ٱللَّهِ ٱلرَّحْمَٰنِ ٱلرَّحِيمِ وَٱلْعَٰدِيَٰتِ ضَبْحًۭا",
      "bangla": "শপথ উর্ধ্বশ্বাসে চলমান অশ্বসমূহের,"
    },
    {
      "number": 2,
      "arabic": "فَٱلْمُورِيَٰتِ قَدْحًۭا",
      "bangla": "অতঃপর ক্ষুরাঘাতে অগ্নিবিচ্ছুরক অশ্বসমূহের"
    },
    {
      "number": 3,
      "arabic": "فَٱلْمُغِيرَٰتِ صُبْحًۭا",
      "bangla": "অতঃপর প্রভাতকালে আক্রমণকারী অশ্বসমূহের"
    },
    {
      "number": 4,
      "arabic": "فَأَثَرْنَ بِهِۦ نَقْعًۭا",
      "bangla": "ও যারা সে সময়ে ধুলি উৎক্ষিপ্ত করে"
    },
    {
      "number": 5,
      "arabic": "فَوَسَطْنَ بِهِۦ جَمْعًا",
      "bangla": "অতঃপর যারা শক্রদলের অভ্যন্তরে ঢুকে পড়ে-"
    },
    {
      "number": 6,
      "arabic": "إِنَّ ٱلْإِنسَٰنَ لِرَبِّهِۦ لَكَنُودٌۭ",
      "bangla": "নিশ্চয় মানুষ তার পালনকর্তার প্রতি অকৃতজ্ঞ।"
    },
    {
      "number": 7,
      "arabic": "وَإِنَّهُۥ عَلَىٰ ذَٰلِكَ لَشَهِيدٌۭ",
      "bangla": "এবং সে অবশ্য এ বিষয়ে অবহিত"
    },
    {
      "number": 8,
      "arabic": "وَإِنَّهُۥ لِحُبِّ ٱلْخَيْرِ لَشَدِيدٌ",
      "bangla": "এবং সে নিশ্চিতই ধন-সম্পদের ভালবাসায় মত্ত।"
    },
    {
      "number": 9,
      "arabic": "۞ أَفَلَا يَعْلَمُ إِذَا بُعْثِرَ مَا فِى ٱلْقُبُورِ",
      "bangla": "সে কি জানে না, যখন কবরে যা আছে, তা উত্থিত হবে"
    },
    {
      "number": 10,
      "arabic": "وَحُصِّلَ مَا فِى ٱلصُّدُورِ",
      "bangla": "এবং অন্তরে যা আছে, তা অর্জন করা হবে?"
    },
    {
      "number": 11,
      "arabic": "إِنَّ رَبَّهُم بِهِمْ يَوْمَئِذٍۢ لَّخَبِيرٌۢ",
      "bangla": "সেদিন তাদের কি হবে, সে সম্পর্কে তাদের পালনকর্তা সবিশেষ জ্ঞাত।"
    }
  ]
}